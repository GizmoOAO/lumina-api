{
  "redirects": [
    {
      "source": "/",
      "destination": "https://github.com/GizmoOAO/lumina-api"
    }
  ],
  "rewrites": [
    {
      "source": "/gh/repos/:owner/:repo/releases/latest",
      "destination": "/api/github/repos/releases/latest.ts"
    },
    {
      "source": "/booth/shop/:name",
      "destination": "/api/booth/shop.ts"
    },
    {
      "source": "/vrc-time",
      "destination": "/api/vrc-time/image/index.go"
    },
    {
      "source": "/vrc-time/image",
      "destination": "/api/vrc-time/image/index.go"
    },
    {
      "source": "/vrc-time/video",
      "destination": "/api/vrc-time/video/index.go"
    }
  ],
  "functions": {
    "api/github/**/*.[jt]s": {
      "runtime": "vercel-deno@0.8.0"
    },
    "api/booth/**/*.[jt]s": {
      "runtime": "vercel-deno@0.8.0"
    }
  },
  "build": {
    "env": {
      "GO_BUILD_FLAGS": "-ldflags '-s -w' -tags timetzdata"
    }
  }
}
